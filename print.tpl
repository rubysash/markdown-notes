/* Complete CSS Reset for Print */
* {
    margin: 0 !important;
    padding: 0 !important;
    box-sizing: border-box !important;
    font-size: inherit !important;
}

/* Base Document Setup */
html {
    font-size: 12pt !important;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif !important;
    background: white !important;
    color: black !important;
}

body {
    font-size: 12pt !important;
    line-height: 1.6 !important;
    padding: 24pt !important;
    background: white !important;
    color: black !important;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif !important;
}

/* Heading Hierarchy - Very Specific */
h1 {
    font-size: 30pt !important;
    font-weight: 600 !important;
    margin-top: 0 !important;
    margin-bottom: 12pt !important;
    border-bottom: 2pt solid black !important;
    padding-bottom: 9pt !important;
    color: black !important;
    page-break-after: avoid !important;
}

h2 {
    font-size: 24pt !important;
    font-weight: 600 !important;
    margin-top: 18pt !important;
    margin-bottom: 12pt !important;
    border-bottom: 1pt solid black !important;
    padding-bottom: 6pt !important;
    color: black !important;
    page-break-after: avoid !important;
}

h3 {
    font-size: 18pt !important;
    font-weight: 600 !important;
    margin-top: 18pt !important;
    margin-bottom: 12pt !important;
    color: black !important;
    page-break-after: avoid !important;
}

h4 {
    font-size: 15pt !important;
    font-weight: 600 !important;
    margin-top: 18pt !important;
    margin-bottom: 12pt !important;
    color: black !important;
    page-break-after: avoid !important;
}

h5, h6 {
    font-size: 12pt !important;
    font-weight: 600 !important;
    margin-top: 18pt !important;
    margin-bottom: 12pt !important;
    color: black !important;
    page-break-after: avoid !important;
}

/* Paragraph Text */
p {
    font-size: 12pt !important;
    margin-bottom: 12pt !important;
    margin-top: 0 !important;
    color: black !important;
    orphans: 3 !important;
    widows: 3 !important;
}

/* Lists - Force 12pt on everything */
ul, ol {
    font-size: 12pt !important;
    margin: 12pt 0 !important;
    padding-left: 24pt !important;
    color: black !important;
}

li {
    font-size: 12pt !important;
    margin-bottom: 6pt !important;
    line-height: 1.6 !important;
    color: black !important;
    page-break-inside: avoid !important;
}

/* All text elements in lists must be 12pt */
ul li, ol li, 
ul li p, ol li p,
ul li strong, ol li strong,
ul li b, ol li b,
ul li em, ol li em,
ul li i, ol li i,
ul li span, ol li span,
ul li div, ol li div {
    font-size: 12pt !important;
    color: black !important;
}

/* Nested lists */
ul ul, ul ol, ol ul, ol ol {
    font-size: 12pt !important;
    margin: 6pt 0 !important;
}

ul ul li, ul ol li, ol ul li, ol ol li {
    font-size: 12pt !important;
}

/* Emphasis - Force to body text size */
strong, b {
    font-size: 12pt !important;
    font-weight: 700 !important;
    color: black !important;
}

em, i {
    font-size: 12pt !important;
    font-style: italic !important;
    color: black !important;
}

/* Code */
code {
    font-size: 10pt !important;
    background-color: #f5f5f5 !important;
    color: black !important;
    padding: 3pt 6pt !important;
    border-radius: 4pt !important;
    font-family: "Courier New", monospace !important;
    border: 0.5pt solid #cccccc !important;
}

pre {
    font-size: 10pt !important;
    background-color: #f8f8f8 !important;
    border: 1pt solid #cccccc !important;
    border-radius: 6pt !important;
    padding: 15pt !important;
    margin: 18pt 0 !important;
    page-break-inside: avoid !important;
}

pre code {
    font-size: 10pt !important;
    background: none !important;
    padding: 0 !important;
    border: none !important;
}

/* Blockquotes */
blockquote {
    font-size: 12pt !important;
    border-left: 4pt solid black !important;
    margin: 18pt 0 !important;
    padding: 12pt 18pt !important;
    background-color: #f9f9f9 !important;
    color: black !important;
    font-style: italic !important;
    page-break-inside: avoid !important;
}

blockquote p {
    font-size: 12pt !important;
}

/* Tables */
table {
    border-collapse: collapse !important;
    width: 100% !important;
    margin: 18pt 0 !important;
    background-color: white !important;
    page-break-inside: avoid !important;
    font-size: 12pt !important;
}

th {
    font-size: 12pt !important;
    background-color: #f0f0f0 !important;
    color: black !important;
    font-weight: 600 !important;
    padding: 9pt 12pt !important;
    border: 1pt solid black !important;
}

td {
    font-size: 12pt !important;
    padding: 9pt 12pt !important;
    border: 1pt solid black !important;
    color: black !important;
}

tr:nth-child(even) {
    background-color: #f9f9f9 !important;
}

/* Links */
a {
    font-size: 12pt !important;
    color: black !important;
    text-decoration: underline !important;
}

a[href]:after {
    content: " (" attr(href) ")" !important;
    font-size: 10pt !important;
    color: #666666 !important;
}

a[href^="#"]:after {
    content: "" !important;
}

/* Horizontal Rules */
hr {
    border: none !important;
    height: 1pt !important;
    background-color: black !important;
    margin: 24pt 0 !important;
    page-break-after: avoid !important;
}

/* Images */
img {
    max-width: 100% !important;
    height: auto !important;
    page-break-inside: avoid !important;
    margin: 6pt 0 !important;
    display: block !important;
    border: 1pt solid #cccccc !important;
}

/* Task Lists */
input[type="checkbox"] {
    margin-right: 6pt !important;
}

/* Keyboard Keys */
kbd {
    font-size: 10pt !important;
    background-color: #f0f0f0 !important;
    border: 1pt solid black !important;
    padding: 1.5pt 4.5pt !important;
    color: black !important;
    font-family: "Courier New", monospace !important;
}

/* Page Setup */
@page {
    margin: 72pt !important;
}

/* Media Query for Print */
@media print {
    * {
        font-size: inherit !important;
        background: white !important;
        color: black !important;
    }
    
    body { font-size: 10pt !important; }
    h1 { font-size: 30pt !important; }
    h2 { font-size: 24pt !important; }
    h3 { font-size: 18pt !important; }
    h4 { font-size: 15pt !important; }
    h5, h6 { font-size: 12pt !important; }
    p, li, strong, b, em, i, span, div { font-size: 10t !important; }
    code, pre code { font-size: 9pt !important; }
}